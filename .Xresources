!------------------------------------------------
! URXVT GENERAL CONFIG
!------------------------------------------------
URxvt.geometry: 80x22
URxvt.transparent:   true
URxvt.shading: 25
URxvt.tintColor:     white

!------------------------------------------------
! URXVT FONTS
!------------------------------------------------
URxvt*termName: rxvt-unicode
URxvt.imLocale: fr_FR.utf8
xterm*utf8: 1
URxvt.font:     xft:bitstream vera sans mono:size=10:antialias=true
URxvt.boldFont: xft:bitstream vera sans mono:bold:size=10:antialias=true
URxvt.italicFont: xft:bitstream vera sans mono:italic:size=10:antialias=true
URxvt.bolditalicFont: xft:bitstream vera sans mono:bold:italic:size=10:antialias=true
! URxvt*letterSpace: -1
URxvt*allow_bold: true

!------------------------------------------------
! URXVT FONT SETTINGS
!------------------------------------------------
Xft.autohint: true
Xft.antialias: true
Xft.hinting: true
Xft.hintstyle: hintslight
Xft.rgba: rgb
Xft.lcdfilter: lcddefault

!------------------------------------------------
! URXVT ENABLE LINK SUPPORT
!------------------------------------------------
URxvt.depth: 32
URxvt*scrollBar: false
URxvt.urgentOnBell: false
URxvt.visualBell: false
URxvt*saveLines: 3256
URxvt*mouseWheelScrollPage: true
URxvt*cursorBlink: true
URxvt*cursorUnderline: true

!------------------------------------------------
! Extensions ~/.urxvt./ext
!------------------------------------------------
URxvt.perl-ext-common: default,keyboard-select,matcher

! Clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard
URxvt.keysym.Shif-Control-V: eval:paste_clipboard

! Keyboard-select
URxvt.keysym.C-Escape: perl:keyboard-select:activate
URxvt.keysym.C-S-S: perl:keyboard-select:search
URxvt.keyboard-select.clipboard: true

!! Matcher
URxvt.url-launcher: firefox

!------------------------------------------------
! URXVT COPY PASTE SHORTCUTS
!------------------------------------------------
URxvt.iso14755: false
! URxvt.keysym.Shift-Control-C: perl:clipboard:copy
! URxvt.keysym.Shift-Control-V: perl:clipboard:paste

!------------------------------------------------
! URXVT TABS
!------------------------------------------------
URxvt.tabbedex.autohide: yes
URxvt.tabbedex.tabbar-fg: 2
URxvt.tabbedex.tabbar-bg: 0
URxvt.tabbedex.tab-fg: 10
URxvt.tabbedex.tab-bg: 0
URxvt.tabbedex.title: yes
URxvt.tabbedex.new-button: no

!------------------------------------------------
! URXVT FULLSCREEN TOGGLE
!------------------------------------------------
URxvt.keysym.F11: perl:fullscreen:switch

!------------------------------------------------
! URXVT COLORS
!------------------------------------------------
*background: #1D2426
*foreground: #8FA388

!! black
*color0: #1b1918
*color8: #766e6b
!! red
*color1: #f22c40
*color9: #f22c40
!! green
*color2: #5ab738
*color10: #5ab738
!! yellow
*color3: #d5911a
*color11: #d5911a
!! blue
*color4: #6294ea
*color12: #6294ea
!! magenta
*color5: #6666ea
*color13: #6666ea
!! cyan
*color6: #00ad9c
*color14: #00ad9c
!! white
*color7: #dbd9d9
*color15: #f1efee
